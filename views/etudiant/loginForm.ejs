<div class="bg">

    <div class="formEtudiant col-md-6">

        <div class="row">

            <div class="pics col-md-6 d-flex justify-content-center align-items-center">

                <%if(error !='' ) { %>
                    <div class="col-md-10 box-notif d-flex justify-content-center align-items-center">
                        <%=error%>
                    </div>
                <% } %>


                <%if(success !='' ) { %>
                            <div class="col-md-10 box-notif d-flex justify-content-center align-items-center">
                                <%=success%>
                            </div>
                <% } %>      

            </div>

            <div class="inputs col-md-6  d-flex justify-content-center align-items-center">
                <form action="" class="col-md-12" method="post">
                    <i class="fa fa-graduation-cap"></i>
                    <h3>Connectez-vous</h3>
                    <div class="hr"></div>


                    <div class="form-group mt-5">
                        <input type="email" class="form-control" name="email">

                        <div class="box-fa">
                            <i class="fa  fa-envelope"></i>
                        </div>

                    </div>

                    <div class="form-group">
                        <input type="password" class="form-control" name="password">

                        <div class="box-fa">
                            <i class="fa  fa-lock"></i>
                        </div>

                    </div>

                    <div class="form-group">

                        <button type="submit">Se connecter</button>

                    </div>

                    <div class="form-group">
                        <a href="/reset/resetPass/form">Mot de passe oublié?</a>
                    </div>


                </form>
            </div>

        </div>

    </div>

</div>