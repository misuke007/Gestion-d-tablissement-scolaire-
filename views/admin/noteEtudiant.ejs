<%-include('navbar')%>
<%-include('menuAdmin')%>

    <div class="content-admin-option">


        <div class="row">

            <div class="text-box col-md-4 ">

                <h2 class="nom_filiere">
                    <%=dataFiliere.nom%>
                </h2>
                <div class="underline_filiere"></div>
                <p class="nbr_etudiant">Liste des étudiants : </p>
                <a href="/admin/note/ChoixSem/<%=FiliereId%>"> <i class="fa fa-calendar"></i> Choix semestre</a>
                

            </div>

            <div class="form-box col-md-8">
                <form action="" method="POST">
                    <input type="hidden" name="FiliereId" value="<%=FiliereId%>">
                    <input type="hidden" name="SemestreId" value="<%=SemestreId%>">
                    <input type="hidden" name="OptionId" value="<%=OptionId%>">

                    <input type="search" name="search" placeholder="Recherchez un étudiant" >
                    <button type="submit"><i class="fa fa-search"></i></button>
                </form>
                <%if(success!= '') { %>
                    <div class="text-center d-flex justify-content-center align-items-center notif-success"><%=success%></div>
                <% } %>    
                

                

            </div>

        </div>


        <div class="row">
            <table class="table mt-5">
                <thead class="thead-dark">
                  <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Niveau</th>
                    <th scope="col" class="text-center">Action</th>
                  </tr>
                </thead>
                <tbody>

                    <%if(data.length != 0 ) { %>
                        
                    <%for(item of data) { %>
                        <tr>
                         <td><p><%=item.Utilisateur.nom%>  <%=item.Utilisateur.prenom%></p></td>
                         <td>
                            <%if(item.SemestreId == 1 || item.SemestreId == 2) { %>
                                <p>L1/<%=item.Semestre.nom%></p>
                            <% } %>
                            <%if(item.SemestreId == 3 || item.SemestreId == 4) { %>
                                <p>L2/<%=item.Semestre.nom%></p>
                            <% } %>
                            <%if(item.SemestreId == 5 || item.SemestreId == 6) { %>
                
                                <p>
                                    L3/<%=item.Semestre.nom%><br>
                                    <%if(item.SemestreId == 6) { %>
                                        Option : <%=item.Option.nom%>
                                    <% } %>    
                                </p>
                            <% } %>  
                            <%if(item.SemestreId == 7 || item.SemestreId == 8) { %>
                                <p>M1/<%=item.Semestre.nom%><br> Option : <%=item.Option.nom%></p>
                            <% } %>  
                            <%if(item.SemestreId == 9 || item.SemestreId == 10) { %>
                                <p>M2/<%=item.Semestre.nom%><br> Option : <%=item.Option.nom%></p>
                            <% } %>       
                         </td>
                         <td class="d-flex justify-content-center align-items-center"><a href="/admin/note/ajout/<%=FiliereId%>/<%=item.SemestreId%>/<%=item.UtilisateurId%>/<%=item.OptionId%>">noter</a></td>
                        </tr>
                     <% } %>   
                    <% } else {%>
                      <tr>
                          <td><h5> Néant</h5></td>
                    </tr>
                    <% } %>        
                 
                </tbody>
              </table>
        </div>

    </div>










