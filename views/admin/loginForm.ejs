<div class="admin-bg-login">

    <div class="admin-bg-transparent row">
     
        <div class="nom-universite col-md-5 col-sm-12 ">
            <h1>Université de <span class="mada-color">Madagascar</span></h1>
            <%if(error != '') { %>
                <div class="alert alert-danger"><%=error%></div>
            <% } %>
            
            <%if(success != '') { %>
                <div class="alert alert-success"><%=success%></div>
            <% } %> 
        </div>
        
        <div class="formulaire col-md-4 col-sm-12 d-flex justify-content-center align-items-center">
            <form action="" method="POST" class="col-10"> 

                <div class="box-icon d-flex justify-content-center align-items-center">
                    <i class="fa fa-user text-align-center"></i>
                </div>
    
                <div class="box-badge justify-content-center align-items-center d-flex">
                    <h3>Scolarité</h3>
                </div>
    
                <i class="fa fa-envelope-o"></i>
                <input type="email" name="email" class="form-control" placeholder="Entrez votre e-mail"><br>
                
                <i class="fa fa-lock"></i>

              
                <input type="password" name="password" class="form-control" placeholder="Entrez votre mot de passe"><br>
    
                <div class="box-button d-flex justify-content-center align-items-center">
                    <button type="submit">Se connecter</button>
                </div>

                <div class="d-flex justify-content-center align-items-center">
                    <a href="/reset/resetPass/form">Mot de passe oublié?</a>
                </div>
               
               
                
            
            </form>
        </div>

    </div>
    
</div>




